{
  "name": "carbyne-app",
  "version": "0.1.0",
  "repository": "https://github.com/ceymard/carbyne-state",
  "description": "A client-side application state machine for Carbyne.",
  "license": "MIT",
  "main": "./src/index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "build:dts": "dts-bundle --name carbyne-app --main src/index.d.ts --out ../index.d.ts && sed -i '/\\(require\\|import\\).*\\.\\(styl\\|css\\)/d' ./index.d.ts",
    "build:js": "tsc",
    "build": "npm run build:js && npm run build:dts"
  },
  "devDependencies": {
    "@types/es6-collections": "0.0.28",
    "@types/es6-promise": "0.0.29",
    "dts-bundle": "^0.5.0"
  }
}
